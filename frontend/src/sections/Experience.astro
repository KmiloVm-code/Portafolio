---
import { getCollection } from "astro:content";
import Briefcase from "@/assets/svg/briefcase-business.astro";

const experienceItems = await getCollection("experience");
---

<section
  id="experiencia"
  class="py-16 md:py-32 bg-bg-alt relative overflow-hidden"
>
  <div class="container mx-auto px-6 md:px-12 lg:px-16 max-w-7xl relative z-10 select-none">
    <div class="flex flex-col items-center mb-10 md:mb-20 text-center">
      <!-- Section Header -->
      <h1 class="text-4xl font-bold mb-4 text-center">
        Trayectoria Profesional
      </h1>
      <p
        class="text-lg text-center max-w-2xl mx-auto prose text-secondary text-pretty"
      >
        Un recorrido por los hitos que han definido mi carrera y el valor
        aportado en cada etapa.
      </p>
    </div>

    <!-- Timeline Container -->
    <div class="relative space-y-8">
      <!-- Timeline Divider -->
      <div
        class="absolute left-5 md:left-44 top-0 bottom-0 w-px bg-linear-to-b from-transparent via-slate-800 to-transparent"
      >
      </div>
      {
        experienceItems.map((item) => (
          <div class="relative grid grid-cols-[40px_1fr] md:grid-cols-[140px_72px_1fr] items-start group">

            {/* Timeline Date Desktop */}
            <div class="hidden md:flex justify-end pt-2.5 pr-8">
              <span class="font-bold text-accent font-mono tracking-tighter text-right">
                {item.data.start_date} - {item.data.end_date}
              </span>
            </div>

            {/* Timeline Icon */}
            <div class="flex justify-center z-10">
            <div class="w-10 h-10 flex items-center justify-center border border-border/40 rounded-full bg-bg group-hover:border-accent-hover shadow-[0_0_10px_rgba(0,0,0,0.5)] z-10 group-hover:shadow-accent-hover transition-all duration-300">
              <Briefcase
                size="20"
                class="text-icon/30 group-hover:text-accent-hover transition-colors duration-300"
              />
            </div>
          </div>

            {/* TimeLine Date Mobile */}
            <div class="pl-4 md:pl-10">
              <div class="md:hidden flex items-center h-10 mb-4">
                <span class="text-xs font-bold text-cyan-500/80 font-mono tracking-widest uppercase">
                  {item.data.start_date} - {item.data.end_date}
                </span>
              </div>

              {/* Timeline Content */}
              <article class="p-6 rounded-xl border border-border bg-card/30 hover:bg-card/60 hover:border-accent-hover/80 transition-all duration-300 backdrop-blur-sm">
                <div class="mb-4">
                  <h2 class="text-xl font-bold group-hover:text-accent-hover transition-colors duration-300 mb-1">
                    {item.data.title}
                  </h2>
                  <h3 class="text-lg font-medium text-secondary">
                    {item.data.company}
                  </h3>
                </div>
                <p class="text-sm text-secondary paragraph mb-4">
                  {item.data.description}
                </p>
                <ul class="list-disc list-inside space-y-2 border-t border-border pt-4">
                  <li class="text-sm text-secondary/40 marker:text-accent">
                    <strong class="font-semibold">Tecnolog√≠as:</strong>{" "}
                    {item.data.technologies}
                  </li>
                </ul>
              </article>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
